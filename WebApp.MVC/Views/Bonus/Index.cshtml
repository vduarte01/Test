@model IEnumerable<WebApplication.Entities.Employee>
@using System.Web.Configuration;
@{
    ViewBag.Title = "Index";
}


@Styles.Render("~/bundle/DataTablesCSS")
@Styles.Render("~/bundle/jqueryui")
@Styles.Render("~/Content/Collapse")



<div class="mjsbox">
    <div class="message alertVB hide "><p class="text-center">@ViewBag.Message</p></div>
    <div class="error alertVBE hide"><p class="text-center">@ViewBag.ErrorMessage</p></div>
</div>
<br />
@using (Html.BeginForm("Index", "Bonus"))
{
    <div class="row small" style="max-width: 1076px; margin: -1px auto; ">
    </div>
}
<br />

<div class="row">
    <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12">


        <div class="panel panel-primary">
            <div class=" panel-heading text-center">
                <h3 class="panel-title negrita">Employee Bonus</h3>
            </div>

            <div class="panel panel-body bs-component table-responsive">
                <table id="tblUsers" class="table  table-striped table-bordered table-hover">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Firts_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Last_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Total_Labor_Hours)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.TypeContract)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            @*<th></th>*@
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                        <tr data-id="@item.Id" class="header">

                            <td class="name">
                                @Html.DisplayFor(modelItem => item.Firts_Name)
                            </td>
                            <td class="hideColumn lastName">
                                @Html.DisplayFor(modelItem => item.Last_Name)
                            </td>
                            <td class="hideColumn">
                                @Html.DisplayFor(modelItem => item.Total_Labor_Hours)
                            </td>
                            <td class="hideColumn">
                                @Html.DisplayFor(modelItem => item.TypeContract.Description)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>


                        </tr>

                            }
                        }
                    </tbody>


                </table>
                <br />

                <div class="well">
                    <h4>DataTables with Emplooyee Information</h4>
                    <p>If the employee has had bonues, you can see the details of this.</p>

                </div>



            </div>



        </div>
    </div>
</div>

<br />





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/DataTablesJS")
    @Scripts.Render("~/bundles/Employees")
    @Scripts.Render("~/bundles/Detail")

}
